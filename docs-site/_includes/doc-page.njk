{% set doc = gid | docFromGid %}

<h1>{% renderFile "./_includes/doc-label.njk", doc %}</h1>

<dl>
	{% set parent = doc.parent | docFromGid %}
	{% if appears_in | length or parent %}
		<dt>Appears in:</dt>
		{% if parent %}
			<dd>{% renderFile "./_includes/doc-link.njk", parent %}</dd>
		{% endif %}

		{% if appears_in | length %}
			{% for appearsInGid in appears_in %}
				{% set appearsInDoc = appearsInGid | docFromGid %}
				<dd>{% renderFile "./_includes/doc-link.njk", appearsInDoc %}</dd>
			{% endfor %}
		{% endif %}
	{% endif %}

	{% if key %}
		<dt>Key:</dt>
		<dd><code>{{ key }}</code></dd>
	{% endif %}

	{% if full_key %}
		<dt>Full key:</dt>
		<dd><code>{{ full_key }}</code></dd>
	{% endif %}

	<dt>GID:</dt>
	<dd><code>{{ gid }}</code></dd>

	{% if not anyOf | length %}
		<dt>Type:</dt>
		<dd>
			<code>{% renderFile "./_includes/doc-type.njk", doc %}</code>

			{%- if required %}
				<small style="color: red;">(Required)</small>
			{%- endif -%}
		</dd>
	{% endif %}

	{% if description %}
		<dt>Description:</dt>
		<dd>{{ description | renderContent('md') | safe }}</dd>
	{% endif %}

	{% if default or default == false or default == 0 %}
		<dt>Default value:</dt>
		<dd><code>{{ default }}</code></dd>
	{% endif %}

	{% if enum | length %}
		<dt>Allowed values:</dt>
		{% for value in enum %}
			<dd><code>{{ value }}</code></dd>
		{% endfor %}
	{% endif %}

	{% if documentation.examples | length %}
		<dt>Examples:</dt>
		{% for example in documentation.examples %}
			<dd>{% renderFile "./_includes/example.njk", example %}</dd>
		{% endfor %}
	{% endif %}

	{% if type == "array" %}
		{% renderFile "./_includes/pages/array.njk", doc %}
	{% elif type == "object" %}
		{% renderFile "./_includes/pages/object.njk", doc %}
	{% elif anyOf | length %}
		{% renderFile "./_includes/pages/any-of.njk", doc %}
	{% endif %}
</dl>

<hr>

<details>
	<summary>Raw data</summary>
	<pre><code>{{ doc | json }}</code></pre>
</details>
